# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Alternative Database URL format (if using connection string)
DATABASE_URL="postgresql://user:password@localhost:5432/database_name?schema=public"

# Server Configuration
SERVER_HOST=your.server.host
SERVER_SSH_USER=ubuntu
SERVER_SSH_PASSWORD=your_ssh_password

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-generated-secret-key-here

# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
OPENROUTER_MODEL=google/gemma-3-27b-it:free
OPENROUTER_HTTP_REFERER=https://your-site.com
OPENROUTER_X_TITLE=Your Site Title

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your-bot-username

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your-blob-token

# Node Environment
NODE_ENV=development

# Port Configuration
PORT=3000

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Email Configuration (if using email services)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@example.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=app.log

# Security
BCRYPT_ROUNDS=10
TOKEN_EXPIRY=7d

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true

# Third-party Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Development/Testing
DEBUG=false
MOCK_DATA=false